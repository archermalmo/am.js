{
  "name": "am.js",
  "version": "0.0.0",
  "author": "Geoff Davis <gdavis@archermalmo.com>",
  "license": "MIT",
  "private": true,
  "main": "dist/am.cjs.js",
  "jsnext:main": "dist/am.esm.js",
  "module": "dist/am.esm.js",
  "devDependencies": {
    "@types/es6-promise": "^3.3.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.2.0",
    "babel-plugin-macros": "^2.0.0",
    "babel-preset-env": "^1.6.1",
    "httpster": "^1.0.3",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.0.1",
    "prettier": "^1.10.2",
    "preval.macro": "^1.0.2",
    "rollup": "^0.54.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-minify-es": "^1.1.1",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-typescript2": "^0.10.0",
    "ts-jest": "^22.0.1",
    "typescript": "^2.6.2",
    "whatwg-fetch": "^2.0.3"
  },
  "scripts": {
    "h": "./node_modules/.bin/httpster -p 4004",
    "r": "./node_modules/.bin/rollup -c",
    "build": "NODE_ENV=production yarn rollup",
    "clean": "rm -r dist .rpt2_cache",
    "demo": "pwd",
    "precommit": "lint-staged",
    "rollup": "yarn r",
    "start": "yarn rollup --watch",
    "test": "jest -u",
    "test:watch": "yarn test --watch",
    "p":
      "./node_modules/.bin/prettier --tab-width 2 --trailing-comma none {./*{js,json},src/**/*,dist/*} --write"
  },
  "babel": {
    "plugins": ["macros"],
    "presets": [
      [
        "env",
        {
          "target": {
            "browsers": ["last 2 versions"]
          },
          "modules": false
        }
      ]
    ]
  },
  "jest": {
    "moduleDirectories": ["node_modules", "src", "dist"],
    "rootDir": "./__tests__",
    "testPathIgnorePatterns": ["node_modules", "__tests__/__*"],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "lint-staged": {
    "*.{js,ts}": ["yarn test"],
    "*.{js,json,ts}": [
      "./node_modules/.bin/prettier --tab-width 2 --trailing-comma none --write",
      "git add"
    ]
  }
}
