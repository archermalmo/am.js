{
	"name": "@archermalmo/am.js",
	"version": "0.0.5",
	"author": "Geoff Davis <gdavis@archermalmo.com>",
	"license": "MIT",
	"browser": "dist/am.js",
	"main": "dist/am.cjs.js",
	"jsnext:main": "dist/am.esm.js",
	"module": "dist/am.esm.js",
	"files": [
		"README.md",
		"dist",
		"src"
	],
	"devDependencies": {
		"@types/es6-promise": "^3.3.0",
		"babel-core": "^6.26.0",
		"babel-jest": "^22.2.0",
		"babel-plugin-transform-object-assign": "^6.22.0",
		"babel-preset-env": "^1.6.1",
		"fetch-ponyfill": "^5.0.1",
		"httpster": "^1.0.3",
		"husky": "^0.14.3",
		"jest": "^22.2.1",
		"jsdoc": "^3.5.5",
		"lint-staged": "^6.0.1",
		"npx": "^9.7.1",
		"prettier": "^1.10.2",
		"rollup": "^0.54.1",
		"rollup-plugin-babel": "^3.0.3",
		"rollup-plugin-minify-es": "^1.1.1",
		"rollup-plugin-typescript2": "^0.10.0",
		"ts-jest": "^22.0.1",
		"typescript": "^2.6.2",
		"whatwg-fetch": "^2.0.3"
	},
	"dependencies": {},
	"scripts": {
		"h": "./node_modules/.bin/httpster -p 4004",
		"r": "./node_modules/.bin/rollup -c",
		"build": "NODE_ENV=production yarn rollup",
		"clean": "rm -r dist .rpt2_cache",
		"jsdoc": "npx jsdoc dist/am.esm.js -p -c jsdoc.config.js",
		"precommit": "lint-staged",
		"rollup": "yarn r",
		"start": "yarn rollup --watch",
		"test": "jest -u",
		"test:coverage": "yarn test --coverage --watch",
		"test:watch": "yarn test --watch"
	},
	"jest": {
		"rootDir": "./__tests__",
		"moduleDirectories": [
			"node_modules",
			"src",
			"dist"
		],
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"testPathIgnorePatterns": [
			"node_modules",
			"__tests__/coverage"
		],
		"collectCoverageFrom": [
			"src/**/*.{js,ts}",
			"!**/node_modules/**"
		],
		"transform": {
			"^.+\\.js$": "babel-jest",
			"^.+\\.ts$": "ts-jest"
		}
	},
	"lint-staged": {
		"src/**/*.{js,json,ts}": [
			"./node_modules/.bin/prettier --tab-width 2 --trailing-comma none --write",
			"git add"
		]
	}
}
